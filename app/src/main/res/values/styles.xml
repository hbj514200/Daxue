<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomButton" parent="Theme.AppCompat.Light">
        <!-- 点击高亮时背景颜色 -->
        <item name="colorControlHighlight">#2A2A2A</item>
        <!-- 按钮正常背景颜色 -->
        <item name="colorButtonNormal">#DCBA11</item>
    </style>

    <style name="big_watch" >
        <item name="android:background">@drawable/big_watch</item>
    </style>

</resources>
